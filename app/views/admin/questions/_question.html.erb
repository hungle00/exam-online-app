<div class="card">
  <div class="card-body">
    <div class="row">
      <% question.options.each do |option| %>
      	<div class="col-md-5 my-1 ml-1 text-center border border-light grey-back pt-1">
				  <h3>
					  <span class="btn btn-primary btn-sm option-btn"><!--Select option as radio button-->
              <label><%= option.content %></label>
              <input type="radio"><br>
					  </span>
				  </h3>
			  </div>
      <% end %>
    </div>
  </div>

  <div class="card-body row">
    <div class="ml-3 col-md-10 col-sm-10 col-10">
      <form>
        <div class="form-group">
          <label class="form-check-label">Option</label>
          <input type="text" placeholder="option" class="form-control"/>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input"/>
          <label class="form-check-label">Set Answer</label>
        </div>
        <button class="btn btn-primary">Create</button>
      </form>
    </div>
  </div>
</div> 