<div class="card">
  <div class="card-body">
    <div class="row">
      <% question.options.each do |option| %>
      	<div class="col-md-5 my-1 ml-1 text-center border border-light grey-back pt-1">
				  <h3>
            <% if option.is_correct %>
              <span class="btn btn-danger btn-sm option-btn"><!--Select option as radio button-->
                <label><%= option.content %></label>
                <input type="radio" value="<%= option.content %>"><br>
              </span>
            <% else %>
              <span class="btn btn-primary btn-sm option-btn"><!--Select option as radio button-->
                <label><%= option.content %></label>
                <input type="radio" value="<%= option.content %>"><br>
              </span>
            <% end %>
				  </h3>
			  </div>
      <% end %>
    </div>
  </div>
</div> 