	<%= form_with(model:[@exam, @question], local: true) do |f| %>
	  <div class="form-group">
		<h5 class="font-weight-normal"><%= f.label :title %></h5>
		<%= f.text_field :title, class: "form-control", placeholder: "Enter the question" %>
	  </div>
	  <div class="form-group">
		<h5 class="font-weight-normal"><%= f.label :score %></h5>
		<%= f.number_field :score, class: "form-control", placeholder: "Score" %>
	  </div>

	  <p><%= f.submit class: "btn btn-primary mt-2" %></p>
	<% end %>
