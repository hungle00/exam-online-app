<h2>Users</h2>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Created at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td>
        <%= avatar_for(user, size: 30) %>
        <%= link_to user.username, profile_path(user) %>
      </td>
      <td><%= user.email %></td>
      <td><%= time_ago_in_words(user.created_at) %> ago</td>
    </tr> 
    <% end %>
  </tbody>
</table>
