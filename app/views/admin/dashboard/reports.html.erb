<h2>All User Reports</h2>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>Question</th>
      <th>User</th>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= link_to report.question.title, report.question.exam %></td>
        <td><%= report.user.username %></td>
        <td><%= report.content %></td>
        <td><%= link_to '<span class="material-icons md-red">delete</span>'.html_safe, report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     </tr> 
    <% end %>
  </tbody>
</table>

<%= link_to 'Export to csv', reports_export_csv_path(format: :csv), class: "btn btn-primary btn-sm" %>