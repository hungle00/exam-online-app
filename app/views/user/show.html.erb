<div class="row mt-4">
  <div class="col-6">
    <section>
      <h2 class="t-3 mb-3">Welcome to <%= @user.username %>'s page</h2>
      <div class="b-3">
        <p>Joined <%= time_ago_in_words(@user.created_at) %> ago</p>
        <p>Email: <%= @user.email %></p>
      </div>

      <% if @user.avatar.attached? %>
        <%= link_to "View avatar", url_for(@user.avatar) %><br>
        <%= image_tag @user.avatar, size: "200x200" %>
      <% end %>
    </section>
  </div>

  <div class="col-6">
    <h3>You took <%= pluralize(@user.count_submissions, 'exam') %></h3>
    <h3>All submissions</h3>
     <table class="table table-hover mt-4">
      <thead>
        <tr>
          <th>Exam</th>
          <th>Score</th>
          <th>Created At</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @submissions.each do |submission| %>
          <tr>
            <td><strong><%= submission.exam.title %></strong></td>
            <td><%= submission.score %></td>
            <td><%= time_ago_in_words(submission.created_at) %></td>
          </tr> 
        <% end %>
      </tbody>
    </table>
  </div>
</div>