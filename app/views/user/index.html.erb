<h2 class="mt-2">Top Score</h2>
<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th>Score</th>
      <th>Exam</th>
      <th>User</th>
      <th>Created At</th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.score %> / <%= submission.exam.total_score %></td>
        <td><%= submission.exam.title %></td>
        <td><%= submission.user.username %></td>
        <td><%= time_ago_in_words(submission.created_at) %></td>
      </tr> 
    <% end %>
  </tbody>
</table>