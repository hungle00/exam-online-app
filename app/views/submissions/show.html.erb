<p id="notice"><%= notice %></p>

<h1 class="mt-3 text-center">Results</h1>
<p>Total Score: <%= @submission.score %></p>
<p>Exam title: <%= @submission.exam.title %></p>

 <table class="table table-hover mt-4">
  <thead>
    <tr>
      <th>Question</th>
      <th>Score</th>
      <th>Answer</th>
      <th>Your Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submission.exam.questions.each do |question|%>
      <tr>
        <td><strong><%= question.title %></strong></td>
        <td><%= question.score %></td>
        <td><%= question.answers.pluck(:content) %></td>
        <td>
          <a data-bs-toggle="modal" data-bs-target="#reportModal">
            <span class="material-icons">report_problem</span>
          </a>
          <%= render 'questions/report_form', question: question, report: @report %>
        </td>
     </tr> 
    <% end %>
  </tbody>
</table>