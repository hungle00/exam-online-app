<p id="notice"><%= notice %></p>

<header class="bg-light my-2 py-2 row justify-content-between">
  <div class="col-6">
    <h1 class="">All Exams</h1>
  </div>
  <div class="col-3 mt-2">
    <%= form_with(url: exams_path, method: :get, local: true) do |f| %>
      <%= f.text_field :search, placeholder: "Search" %>
      <%= f.submit "Search", class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
  <div class="col-3 mt-2">
    <%= form_with(url: exams_path, method: :get, local: true) do |f| %>
      <%= f.select :order, ["Sort by title", "Sort by score"] %>
      <%= f.submit "Sort", class: "btn btn-sm btn-primary" %>
    <% end %>
  </div>
</header>

 <table class="table table-hover mt-4">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Total Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @exams %>
  </tbody>
</table>

<br>

<% if current_user && current_user.is_admin %><!--Show new exam button only for admins-->
  <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#examModal">
    New Exam
  </button>
  <%= render 'admin/exams/modal' %>
<% end %>
