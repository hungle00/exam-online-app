<p id="notice"><%= notice %></p>

<h1 class="mt-3 text-center">All Exams</h1>

 <table class="table table-hover mt-4">
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Total Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @exams %>
  </tbody>
</table>

<br>

<% if current_user && current_user.is_admin %><!--Show new exam button only for admins-->
	<%= link_to 'New Exam', new_exam_path, class: 'btn btn-primary btn-sm' %>
<% end %>
