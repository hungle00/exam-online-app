<p id="notice"><%= notice %></p>

<h1><strong><%= @category.name %></strong></h1>

<div class="row">
  <div class="row col-md-8 mb-4 border-end">
    <%= render @exams %>
  </div>
  <div class="col-md-4 mb-5 ps-4">
    <div class="card mt-3">  
      <div class="card-header">
        <h2>All Categories</h2>
      </div>
      <ul class="list-group list-group-flush">
        <% @categories.each do |category| %>
          <li class="list-group-item">
            <h4 class="card-title"><%= link_to category.name, category %></h4>
            <i class="card-text">Have <%= category.exams.count%> exams.</i>
          </li>
        <% end %>
      <ul>
    </div>
  </div>
</div>

<!-- Button trigger modal -->

<% if current_user && current_user.is_admin %><!--Show new exam button only for admins-->
  <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#categoryModal">
    Edit
  </button> |
  <%= render 'admin/categories/modal' %>
  <%= link_to 'New Exam', new_exam_path, class: "btn btn-primary btn-sm" %> |
  <%= link_to 'Delete', @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>

<% end %>
