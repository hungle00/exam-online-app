<p id="notice"><%= notice %></p>

<h1><strong><%= @category.name %></strong></h1>
<%= link_to 'Back', categories_path, class: 'btn btn-primary' %>
<table class="table table-hover mt-4">
  <thead>
    <tr>
      <th>Exam Title</th>
      <th>Total Score</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @exams %>
  </tbody>
</table>

<!-- Button trigger modal -->

<% if current_user && current_user.is_admin %><!--Show new exam button only for admins-->
  <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#categoryModal">
    Edit
  </button> |
  <%= render 'modal' %>
  <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#examModal">
    New Exam
  </button> | 
  <%= render 'admin/exams/modal' %>
  <%= link_to 'Delete', @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>

<% end %>
